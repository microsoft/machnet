CC = gcc
CFLAGS = -Wall -fPIC
LDFLAGS = -shared -pthread
LIBS = -luuid
TARGET = libmachnet_shim.so
SRCS = machnet.c
OBJS = $(SRCS:.c=.o)

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ $^ $(LIBS)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS) $(TARGET)

.PHONY: all clean
